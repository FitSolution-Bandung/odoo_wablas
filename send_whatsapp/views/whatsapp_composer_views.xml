<odoo>

    <record id="view_form_whatsapp_composer" model="ir.ui.view">
        <field name="name">whatsapp.composer.form</field>
        <field name="model">whatsapp.composer</field>
        <field name="arch" type="xml">
            <form string="Send a WhatsApp Message">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="mobile"/>
                        <field name="message"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Send WhatsApp Message" type="object" class="oe_highlight" name="action_send_message"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
